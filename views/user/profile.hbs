<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>User Profile</h1>
        <hr/>
        <h2>My orders</h2>
        {{# each orders }}
            <div class="card">
                <div class="card-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <div>
                                    {{ this.item.title }} | {{ this.qty }} Units
                                    <span class="badge badge-pill badge-dark float-right">{{this.price}}</span>
                                </div>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card-body">
                    <strong>Total Price: ${{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>