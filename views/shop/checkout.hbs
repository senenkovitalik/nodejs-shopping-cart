<div class="row">
    <div class="col-sm-6 col-md-6 offset-sm-3 offset-md-3">
        <h1>Checkout</h1>
        <h4>Your total: ${{total}}</h4>
        <div id="card-errors" class="alert alert-danger" {{#if noError}}hidden{{/if}} role="alert">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="form-group">
                <label for="cardholder-name">Cardholder Name</label>
                <input type="text" id="cardholder-name" class="form-control" />
            </div>
            <div class="form-group">
                <label for="card-number">Card Number</label>
                <div id="card-number" class="form-control"></div>
            </div>
            <div class="form-group">
                <label for="card-expiry">Card Expiry</label>
                <div id="card-expiry" class="form-control"></div>
            </div>
            <div class="form-group">
                <label for="card-cvc">CVC</label>
                <div id="card-cvc" class="form-control"></div>
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script src="javascripts/checkout.js"></script>